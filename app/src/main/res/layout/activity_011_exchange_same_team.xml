<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="raulete.com.footballfield.s002addplayer.AddPlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/activity_exchange_neymar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Exchange By Neymar"
            android:onClick="exchangeNeymar"/>

        <Button
            android:id="@+id/activity_exchange_ronaldo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Exchange By Ronaldo"
            android:onClick="exchangeRonaldo"/>
    </LinearLayout>


    <raulete.com.footballfieldlayout.FootballFieldLayout
        android:id="@+id/activity_field"
        android:layout_below="@id/activity_exchange_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
